#include <stdio.h>

int sum();

int main() {
    int a;
    a = sum();
    printf("The sum of even number is  %d", a);
    return 0;
}

int sum() {
   
    int x = 0,b;
    printf("Enter a number here ");
    scanf("%d", &b);

    for (int i = 1; i <= 2 * b; i++) {
        if (i % 2 == 0)
            x = x + i;
    }
    return x;
}
